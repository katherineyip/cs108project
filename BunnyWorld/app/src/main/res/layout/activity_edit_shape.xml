<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShapeEditorActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@color/teal_200"
            android:text="Basic Information" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Shape Name"/>

            <EditText
                android:id="@+id/inputShapeName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Shape Name"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Select Image"/>

            <Spinner
                android:id="@+id/spinnerImageName1"
                android:layout_width="120dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Text Display"/>

            <EditText
                android:id="@+id/inputText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Font size"/>

            <EditText
                android:id="@+id/inputFontSize1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter font size (dp)"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Font color"
                android:layout_gravity="center"/>

            <Spinner
                android:id="@+id/inputFontColor1"
                android:layout_width="140dp"
                android:layout_height="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Background color"
                android:layout_gravity="center"/>

            <Spinner
                android:id="@+id/inputBackgroundColor1"
                android:layout_width="140dp"
                android:layout_height="30dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Hide Shape?"/>

            <CheckBox
                android:id="@+id/checkboxShapeIsHidden1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Immobilize Image?"/>

            <CheckBox
                android:id="@+id/checkboxShapeIsMovable1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginVertical="10dp"
            android:text="Set placement" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Location"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X: "/>

            <EditText
                android:id="@+id/editShapeXPosition1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter x"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Y: "/>

            <EditText
                android:id="@+id/editShapeYPosition1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter y"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height: "/>

            <EditText
                android:id="@+id/editShapeHeight1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter height"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Width"/>

            <EditText
                android:id="@+id/editShapeWidth1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter width"
                android:inputType="number" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginVertical="10dp"
            android:text="Set rules" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/evSpin1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"/>

            <Spinner
                android:id="@+id/acSpin1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/imgScript1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Sound/Shape/Page"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Target:"/>

            <EditText
                android:id="@+id/imgTarget1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="For Drop Only"
                android:textSize="20dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/newScriptButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Script" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_marginRight="10dp"
                android:id="@+id/buttonEditShape"/>

            <Button
                android:id="@+id/buttonDeleteShape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Delete"/>

            <Button
                android:id="@+id/buttonCancelShape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>