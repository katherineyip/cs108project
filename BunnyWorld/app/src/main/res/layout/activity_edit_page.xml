<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Page Name: "/>
        
        <EditText
            android:id="@+id/inputPageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter page name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Starter page? "/>

        <CheckBox
            android:id="@+id/checkboxIsStarterPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginVertical="10dp"
        android:text="Set rules" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/evSpinPage"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>

        <Spinner
            android:id="@+id/acSpinPage"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/imgScriptPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Sound/Shape/Page"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Target:"/>

        <EditText
            android:id="@+id/imgTargetPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="For Drop Only"
            android:textSize="20dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/newScriptButtonPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Script" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSavePageChanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Save changes"/>

        <Button
            android:id="@+id/buttonCancelPageChanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Cancel"/>

        <Button
            android:id="@+id/buttonRemovePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove page"/>

    </LinearLayout>

</LinearLayout>
